<!-- Discussions -->
<div class="row">
 <h3>Discussions</h3>
   <br />
  <div class="list-group">
  <% @discussions.each do |discussion| %>
  <div class="col-sm-1">
  <%= link_to discussion.user, discussion_path(discussion)%>
	</div>
	<div class="col-md-4">
  <%= link_to discussion.message, discussion, :class=>"list-group-item"%>
	</div>
	<div class="col-md-4">
	<%= discussion.date.strftime("%d-%m-%Y") %>
</div>
</div>
</div>
<% end %>
<br />
<%= link_to 'New Discussion', new_discussion_path %>

<hr>

<!--Tasks -->

<div class="row">
 <h3>Tasks</h3>
   <br />
  <div class="list-group">
  <% @tasks.each do |task| %>
  <div class="col-sm-1">
  <%= link_to User.find(task.user_id).name, task_path(task)%>
	</div>
	<div class="col-md-4">
  <%= link_to task.task, task, :class=>"list-group-item"%>
	</div>
	<div class="col-md-4">
	<%= task.date.strftime("%d-%m-%Y") %>
</div>
</div>
</div>
<% end %>

<br>

<%= link_to 'New Task', new_task_path %>

