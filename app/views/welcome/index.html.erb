		<div class="col-md-4">
  			<%= link_to task.task, task, :class=>"list-group-item"%>
		</div>
		<div class="col-md-4">
			<%= task.date.strftime("%d-%m-%Y") %>
		</div>
	</div>
		<% end %>
	</div>
	<br>

	<%= link_to 'New Task', new_task_path %>
</div>
</div>

