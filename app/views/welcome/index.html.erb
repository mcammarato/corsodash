<!-- Discussions -->

<div class="row">
<div class="col-md-9">
<div class="container">
 	<h3>Discussions</h3>
  	 <br />
  	<div class="list-group">
  		<% @discussions.each do |discussion| %>
  		<div class="row">
  		<div class="col-sm-1" class="listuser">
  			<%= link_to discussion.user, discussion_path(discussion), :class=>"list-user" %>
		</div>
		<div class="col-md-4">
  			<%= link_to discussion.message, discussion, :class=>"list-group-item"%>
		</div>
		<div class="col-md-4">
			<%= discussion.date.strftime("%d-%m-%Y") %>
		</div>
	</div>
		<% end %>
	</div>



	<br />
	<%= link_to 'New Discussion', new_discussion_path %>
	
	</div>


	<hr>

<!--Tasks -->

